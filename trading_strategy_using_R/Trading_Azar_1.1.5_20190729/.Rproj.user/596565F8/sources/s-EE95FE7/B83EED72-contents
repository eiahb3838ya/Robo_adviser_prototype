##### MACD Strategy =====
# MACD_Fast = 12, MACD_Slow = 26, MACD_Sig = 9
get_alldf<-function(Select_DT,Ret_DT){
  Signal <- get_MACD_Signal(Select_DT)
  Equity <- getEquity_DT(Ret_DT, Signal)
  JG_Equity_DT <- get_Equity_All_DT(Select_DT, Ret_DT, Signal, Equity)
  return(JG_Equity_DT)
}

